CC = @CC@
CFLAGS = @CFLAGS@
LIBS = @LIBS@
CP = @CP@
MV = @MV@
RM = @RM@
DIFF = @DIFF@
MAKEDEPEND = @MAKEDEPEND@

DEPEND = Makefile.depend
DEPEND_PREV = $(DEPEND).prev
TARGET = ../msim

SOURCES = \
	utils.c \
	fault.c \
	text.c \
	env.c \
	cmd.c \
	main.c \
	parser.c \
	list.c \
	input.c \
	physmem.c \
	debug/debug.c \
	debug/gdb.c \
	debug/breakpoint.c \
	device/cpu/mips_r4000/cpu.c \
	device/cpu/riscv_rv32ima/cpu.c \
	device/cpu/general_cpu.c \
	device/mem.c \
	device/ddisk.c \
	device/dr4kcpu.c \
	device/drvcpu.c  \
	device/dcycle.c \
	device/dkeyboard.c \
	device/dorder.c \
	device/dprinter.c \
	device/dtime.c \
	device/device.c \
	arch/win32/mmap.c \
	arch/win32/stdin.c \
	arch/win32/signal.c \
	arch/posix/stdin.c \
	arch/posix/signal.c

OBJECTS := $(addsuffix .o,$(basename $(SOURCES)))

.PHONY: all clean distclean

all: $(TARGET)
	-[ -f $(DEPEND) ] && $(CP) -a $(DEPEND) $(DEPEND_PREV)

clean:
	$(RM) -f $(TARGET) $(OBJECTS) $(DEPEND) $(DEPEND_PREV)

distclean: clean
	$(RM) -f Makefile

-include $(DEPEND)

$(TARGET): $(OBJECTS) $(DEPEND)
	$(CC) $(CFLAGS) -o $@ $(OBJECTS) $(LIBS)

%.o: %.c $(DEPEND)
	$(CC) -c $(CFLAGS) -o $@ $<

$(DEPEND):
	$(MAKEDEPEND) -f - -- $(CFLAGS) -- $(SOURCES) > $@ 2> /dev/null
	-[ -f $(DEPEND_PREV) ] && $(DIFF) -q $(DEPEND_PREV) $@ && $(MV) -f $(DEPEND_PREV) $@
